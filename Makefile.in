prefix = @prefix@
exec_prefix = @exec_prefix@
srcdir = @srcdir@
libdir ?= @libdir@
CFLAGS = @CFLAGS@
CPPFLAGS = @CPPFLAGS@

CC=@CC@

all: ${srcdir}/base58.so

${srcdir}/base58.so: ${srcdir}/base58.c
	${CC} ${CPPFLAGS} ${CFLAGS} -Wall -shared -fPIC -o $@ $<

clean:
	rm -f ${srcdir}/base58.so

install:
	install -D --mode=644 ${srcdir}/base58.so ${DESTDIR}${libdir}/lua/base58.so
